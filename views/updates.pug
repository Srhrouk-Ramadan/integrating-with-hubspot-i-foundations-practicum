doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 Add New Hobby
    form(action='/update-cobj', method='POST')
      label(for='name') Name:
      input(type='text', name='name', required)
      br
      label(for='nick_name') Nickname:
      input(type='text', name='nick_name', required)
      br
      label(for='fav_colour') Favorite Color:
      input(type='text', name='fav_colour', required)
      br
      label(for='hobbies') Hobby:
      input(type='text', name='hobbies', required)
      br
      button(type='submit') Submit
    br
    a(href='/') Return to homepage
